<style>
  .contact__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .contact__title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin: 0 0 1rem 0;
  }

  .contact__subtitle {
    font-size: 1.25rem;
    margin: 0 0 3rem 0;
    opacity: 0.9;
  }

  .contact__links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 768px) {
    .contact {
      padding: 4rem 0;
    }

    .contact__container {
      padding: 0 1rem;
    }

    .contact__links {
      flex-direction: column;
      align-items: stretch;
    }
  }

  .discord-button__text {
    display: none;
  }
</style>
