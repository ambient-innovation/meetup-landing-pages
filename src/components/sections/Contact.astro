---
import SectionTitle from "../ui/SectionTitle.astro";
import Button from "../ui/Button.astro";
import type { MeetupContent } from "../../config/types";

export interface Props {
  content: MeetupContent;
}

const { content } = Astro.props;
---

<section class="contact">
  <div class="contact__container">
    <!-- <h2 class="contact__title">Get In Touch</h2> -->
    <SectionTitle title="Get In Touch" />
    <p class="contact__subtitle">Join our community and stay updated</p>

    <div class="contact__links">
      {
        content.contact.meetup && (
          <Button href={content.contact.meetup} variant="secondary">
            Meetup.com
          </Button>
        )
      }
      {
        content.contact.twitter && (
          <Button href={content.contact.twitter} variant="outline">
            Twitter
          </Button>
        )
      }
      {
        content.contact.email && (
          <Button href={`mailto:${content.contact.email}`} variant="outline">
            Email
          </Button>
        )
      }
      {
        content.contact.discord && (
          <Button
            href={content.contact.discord}
            variant="outline"
            class="discord-button"
          >
            <span class="discord-button__text">Discord</span>
