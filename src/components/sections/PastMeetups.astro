---
import SectionTitle from "../ui/SectionTitle.astro";
import type { MeetupContent } from "../../config/types";

export interface Props {
  content: MeetupContent;
}

const { content } = Astro.props;
---

{
  content.pastEvents && content.pastEvents.length > 0 && (
    <section class="past-meetups">
      <div class="past-meetups__container">
        <SectionTitle title="Check Out Past Meetups" />

        <div class="past-meetups__grid">
          {content.pastEvents.map((event) => (
            <div class="past-meetup-card">
              <div class="past-meetup-card__image">
                {event.image ? (
                  <img src={event.image} alt={event.title} />
                ) : (
                  <div class="past-meetup-card__placeholder">
                    <div class="past-meetup-card__js-logo">.js</div>
                  </div>
                )}
              </div>
              <div class="past-meetup-card__content">
                <div class="past-meetup-card__date">
                  {new Date(event.date).getFullYear()} MEETUP
                </div>
                <h3 class="past-meetup-card__title">{event.title}</h3>
                <div class="past-meetup-card__watch">
                  <span class="past-meetup-card__watch-text">Watch</span>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="past-meetups__pagination">
          <button class="past-meetups__pagination-dot" aria-label="Page 1" />
          <button
            class="past-meetups__pagination-dot past-meetups__pagination-dot--active"
            aria-label="Page 2"
          />
          <button class="past-meetups__pagination-dot" aria-label="Page 3" />
        </div>
      </div>
    </section>
  )
}

<style>
  .past-meetups__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .past-meetups__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .past-meetup-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    transition:
      transform 0.2s ease,
      border-color 0.2s ease;
  }

  .past-meetup-card:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .past-meetup-card__image {
    height: 200px;
    background: linear-gradient(135deg, var(--color-accent) 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .past-meetup-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .past-meetup-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-accent) 0%, #2a2a2a 100%);
  }

  .past-meetup-card__js-logo {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-primary);
    font-family: monospace;
  }

  .past-meetup-card__content {
    padding: 1.5rem;
  }

  .past-meetup-card__date {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .past-meetup-card__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 1rem 0;
    line-height: 1.4;
  }

  .past-meetup-card__watch {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .past-meetup-card__watch-text {
    font-size: 0.875rem;
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .past-meetups__pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .past-meetups__pagination-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .past-meetups__pagination-dot:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  .past-meetups__pagination-dot--active {
    background: var(--color-primary);
  }

  @media (max-width: 768px) {
    .past-meetups {
      padding: 4rem 0;
    }

    .past-meetups__container {
      padding: 0 1rem;
    }

    .past-meetups__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
